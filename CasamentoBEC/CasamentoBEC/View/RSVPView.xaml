    <ContentPage.Content>
        <Frame  Style="{DynamicResource framecarousel}">
            <ScrollView
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        Margin="10,10,10,10">
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                    <StackLayout>
                        <Label HorizontalTextAlignment="Center" FontFamily="Gabriola" FontSize="20" TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Estamos muito felizes por ter você em nossa "></Span>
                                    <Span Text="lista de convidados. Gostaríamos de pedir que "></Span>
                                    <Span Text="gentilmente confirme sua presença através do "></Span>
                                    <Span Text="botão abaixo. "></Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <ffimageloading:CachedImage
                            Margin="0,50,0,50"
                             Aspect="AspectFit"
							LoadingPlaceholder="image_loading.png" 
                            ErrorPlaceholder="image_error.png"
							Source="rsvpicon.png"/>
                        <Label  HorizontalTextAlignment="Center" FontFamily="Gabriola" FontSize="20"  TextColor="Black">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Após a confirmação enviaremos o convite oficial "></Span>
                                    <Span Text="juntamente com os convites individuais, sendo "></Span>
                                    <Span Text="assim só confirme se tiver total certeza. Sua "></Span>
                                    <Span Text="presença é especial e importantíssima para "></Span>
                                    <Span Text="completar nosso tão sonhado dia."></Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Frame>
