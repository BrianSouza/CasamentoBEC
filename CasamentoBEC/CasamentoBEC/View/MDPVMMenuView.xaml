<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasamentoBEC.View.MasterDetailPageViewMaster"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             Title="Master">
    <StackLayout >
        <ListView x:Name="MenuItemsListView"
              SeparatorVisibility="Default"
                  SeparatorColor="{DynamicResource toolbarcolor}"
              HasUnevenRows="true"
              ItemsSource="{Binding MenuItens}"
              BackgroundColor="{DynamicResource fontefundolaranja}"
              >
            <ListView.Header>
                <Grid BackgroundColor="{DynamicResource fundomenu}" HeightRequest="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>

                    </Grid.RowDefinitions>

                    <controls:CircleImage 
                        Margin="50,50,50,50"
                        Source="{Binding Image}" 
                        FillColor="White"
                        Aspect="AspectFill" 
                        Grid.Column="1"
                        Grid.Row="2"
                        BorderColor="{DynamicResource corbordacircle}"
                        BorderThickness="2">
                        <controls:CircleImage.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">200</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.WidthRequest>
                        <controls:CircleImage.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">200</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.HeightRequest>
                    </controls:CircleImage>
                    <controls:CircleImage 
                        Margin="25,25,25,25"
                        Source="{Binding Image}" 
                        Aspect="AspectFill" 
                        BorderColor="{DynamicResource corbordacircle}"
                        BorderThickness="2"
                        FillColor="Transparent"
                        Grid.Column="1"
                        Grid.Row="2"
                        Opacity="0.75">
                        <controls:CircleImage.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">200</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.WidthRequest>
                        <controls:CircleImage.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">200</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.HeightRequest>
                    </controls:CircleImage>
                    <controls:CircleImage 
                        Source="{Binding Image}" 
                        Aspect="AspectFill" 
                        FillColor="Transparent"
                        Grid.Column="1"
                        Grid.Row="2"
                        BorderColor="{DynamicResource corbordacircle}"
                        BorderThickness="2"
                        Opacity="0.75">
                        <controls:CircleImage.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">100</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.WidthRequest>
                        <controls:CircleImage.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="Android, iOS">100</On>
                                <On Platform="WinPhone">75</On>
                            </OnPlatform>
                        </controls:CircleImage.HeightRequest>
                    </controls:CircleImage>

                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout 
                            Padding="15,10" 
                            HorizontalOptions="FillAndExpand" 
                            Orientation="Horizontal">

                            <Image Source="{Binding NomeImagem}" Margin="0,0,30,0"></Image>
                            <Label VerticalOptions="FillAndExpand" 
                                   VerticalTextAlignment="Center"
                                   HorizontalTextAlignment="End"
                    Text="{Binding DescricaoMenu}" 
                    FontSize="20"
                                   TextColor="{DynamicResource toolbarcolor}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>