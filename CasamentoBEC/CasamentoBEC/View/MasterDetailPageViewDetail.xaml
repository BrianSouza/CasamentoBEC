<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasamentoBEC.View.MasterDetailPageViewDetail"
             Title="Detail">
    <StackLayout Padding="30,30,30,30" VerticalOptions="Fill" BackgroundColor="Accent" >
        <Frame BackgroundColor="Bisque"
               CornerRadius="10"
               VerticalOptions="FillAndExpand" 
               Margin="0,0,0,30">
            <StackLayout>
                <Label Text="Save the date" TextColor="Black"/>
                <BoxView BackgroundColor="Red"
                     HeightRequest="2"/>
            </StackLayout>
        </Frame>

        <Frame BackgroundColor="Bisque"
               CornerRadius="10"
               VerticalOptions="FillAndExpand"
               Margin="0,0,0,30">
            <StackLayout>
                <Label Text="Confirme sua presença" TextColor="Black"/>
                <BoxView BackgroundColor="Red"
                     HeightRequest="2"/>
            </StackLayout>
        </Frame>

        <Frame BackgroundColor="Bisque"
               CornerRadius="10"
               VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Text="Como chegar?" TextColor="Black"/>
                <BoxView BackgroundColor="Red"
                     HeightRequest="2"/>
            </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>