            </Style>
            <Style x:Key="LabelIconeMap" TargetType="Label" BaseResourceKey="BaseLabelStyle">
                <Setter Property="FontFamily" Value="{StaticResource MaterialFontFamily}"></Setter>
                <Setter Property="Text" Value="{StaticResource map}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource coriconemenu}"></Setter>
                <Setter Property="FontSize" Value="32"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
            </Style>
            <Style x:Key="LabelIconeCheck" TargetType="Label" BaseResourceKey="BaseLabelStyle">
                <Setter Property="FontFamily" Value="{StaticResource MaterialFontFamily}"></Setter>
                <Setter Property="Text" Value="{StaticResource check}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource coriconemenu}"></Setter>
                <Setter Property="FontSize" Value="32"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
            </Style>
            <Style x:Key="LabelIconeCamera" TargetType="Label" BaseResourceKey="BaseLabelStyle">
                <Setter Property="FontFamily" Value="{StaticResource MaterialFontFamily}"></Setter>
                <Setter Property="Text" Value="{StaticResource camera}"></Setter>
                <Setter Property="TextColor" Value="{StaticResource coriconemenu}"></Setter>
                <Setter Property="FontSize" Value="32"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
                <Setter Property="FontAttributes" Value="Bold"></Setter>
            </Style>
            <Style x:Key="LabelIconeWifiOff" TargetType="Label" BaseResourceKey="BaseLabelStyle">
                <Setter Property="FontFamily" Value="{StaticResource MaterialFontFamily}"></Setter>
                <Setter Property="Text" Value="{StaticResource wifioff}"></Setter>
